<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="499.0" prefWidth="618.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.CreateAccountController">
   <children>
      <Label alignment="CENTER" layoutX="214.0" layoutY="14.0" prefHeight="28.0" prefWidth="193.0" text="Create Account" textFill="#4fa1ff">
         <font>
            <Font name="Consolas Bold Italic" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="userID" layoutX="71.0" layoutY="75.0" promptText="User ID" />
      <TextField fx:id="name" layoutX="340.0" layoutY="75.0" prefHeight="25.0" prefWidth="208.0" promptText="Full Name" />
      <TextField fx:id="pass" layoutX="71.0" layoutY="157.0" promptText="Password" />
      <TextField fx:id="email" layoutX="335.0" layoutY="157.0" prefHeight="25.0" prefWidth="208.0" promptText="Email" />
      <RadioButton fx:id="male" layoutX="129.0" layoutY="233.0" mnemonicParsing="false" text="Male">
         <toggleGroup>
            <ToggleGroup fx:id="gender" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="female" layoutX="220.0" layoutY="233.0" mnemonicParsing="false" text="Female" toggleGroup="$gender" />
      <ComboBox fx:id="accTypes" layoutX="236.0" layoutY="273.0" prefWidth="150.0" promptText="Account Type" />
      <Button layoutX="265.0" layoutY="349.0" mnemonicParsing="false" onAction="#createOnClick" prefHeight="39.0" prefWidth="93.0" text="Create" textFill="#0e5d9e">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font>
      </Button>
      <Button layoutX="14.0" layoutY="460.0" mnemonicParsing="false" onAction="#backOnClick" prefHeight="25.0" prefWidth="49.0" text="Back" />
      <Label layoutX="71.0" layoutY="233.0" text="Gender:" />
      <Label fx:id="confirm" layoutX="211.0" layoutY="409.0" prefHeight="26.0" prefWidth="201.0" textFill="#da3737">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
